<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rank"
            type="String" />

        <variable
            name="data"
            type="com.android04.godfisherman.ui.home.RankingData.HomeRankingData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_median"
        android:paddingEnd="@dimen/space_median">

        <ImageView
            android:id="@+id/tv_medal"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/medal_sample"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_x_small"
            android:text="@{rank}"
            android:textSize="@dimen/text_median"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_medal"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10위"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_median"
            android:text="@{data.userId}"
            android:textSize="@dimen/text_median"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_rank"
            app:layout_constraintEnd_toStartOf="@+id/tv_type"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/space_small"
            tools:text="구전김박짱짱"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_small"
            android:text="@{data.type}"
            android:textSize="@dimen/text_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_size"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="메갈로돈"/>

        <TextView
            android:id="@+id/tv_size"
            setSizeText="@{data.size}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="544.7cm"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_median"
            android:background="@color/disabled_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_rank" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
